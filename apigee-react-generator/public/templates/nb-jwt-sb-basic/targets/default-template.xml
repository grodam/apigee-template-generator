<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<TargetEndpoint name="default">
    <PreFlow name="PreFlow">
        <Request>
            {{#if isBasicAuth}}
            <Step><Name>KVM-GetBackendInfos</Name></Step>
            <Step><Name>BA-AddAuthHeader</Name></Step>
            {{/if}}
            {{#if isOAuth2}}
            <Step><Name>KVM-GetBackendInfosCC</Name></Step>
            <Step><Name>LC-LookupToken</Name></Step>
            <Step>
                <Name>SC-GetTokenCC</Name>
                <Condition>lookupcache.LC-LookupToken.cachehit = false</Condition>
            </Step>
            <Step>
                <Name>EV-ExtractToken</Name>
                <Condition>lookupcache.LC-LookupToken.cachehit = false</Condition>
            </Step>
            <Step>
                <Name>PC-PopulateToken</Name>
                <Condition>lookupcache.LC-LookupToken.cachehit = false</Condition>
            </Step>
            <Step><Name>AM-SetToken</Name></Step>
            {{/if}}
        </Request>
        <Response/>
    </PreFlow>
    <Flows/>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <HTTPTargetConnection>
        <LoadBalancer>
            <Server name="{{targetServerName}}"/>
        </LoadBalancer>
        <Path>{{targetPath}}</Path>
    </HTTPTargetConnection>
</TargetEndpoint>
