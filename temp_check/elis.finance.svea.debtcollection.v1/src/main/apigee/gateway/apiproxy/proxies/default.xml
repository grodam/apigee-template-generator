    <Flow name="POST /api/User">
        <Request/>
        <Response/>
        <Condition>(proxy.pathsuffix MatchesPath "/api/User") and (request.verb = "POST")</Condition>
    </Flow>
        <Flow name="404">
            <Description>Catch-all for unmatched requests</Description>
            <Request/>
            <Response>
                <Step>
                    <Name>AM-NotFound</Name>
                </Step>
            </Response>
            <Condition/>
        </Flow>
    </Flows>
    <HTTPProxyConnection>
        <BasePath>/debtcollection/v1</BasePath>
    </HTTPProxyConnection>
    <RouteRule name="NoRoute">
        <Condition>request.verb = "OPTIONS" AND request.header.origin != null AND request.header.Access-Control-Request-Method != null</Condition>
    </RouteRule>
    
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
