<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <DefaultFaultRule>
        <AlwaysEnforce>true</AlwaysEnforce>
        <Step>
            <Name>FC-SetCorsHeaders</Name>
        </Step>
    </DefaultFaultRule>
    <FaultRules>
        <FaultRule name="error_handling">
            <Condition>(fault.name != "RaiseFault")</Condition>
            <Step>
                <Name>FC-ErrorHandling</Name>
            </Step>
        </FaultRule>
    </FaultRules>
    <PreFlow name="PreFlow">
        <Request>
            
            <Step>
                <Name>SA-GlobalRate</Name>
            </Step>
            
            <Step>
                <Name>FC-VerifyJWT</Name>
                <Condition>request.verb != "OPTIONS"</Condition>
            </Step>
            <Step>
                <Name>FC-VerifyApiKey</Name>
                <Condition>request.verb != "OPTIONS"</Condition>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response>
            <Step>
                <Name>FC-SetCorsHeaders</Name>
                <Condition>request.verb != "OPTIONS"</Condition>
            </Step>
        </Response>
    </PostFlow>
    <Flows>
        <Flow name="OptionsPreFlight">
            <Request/>
            <Response>
                <Step>
                    <Name>FC-SetCorsHeaders</Name>
                </Step>
            </Response>
            <Condition>request.verb = "OPTIONS" AND request.header.origin != null AND request.header.Access-Control-Request-Method != null</Condition>
        </Flow>
    <Flow name="POST /api/Auth/token">
        <Request/>
        <Response/>
        <Condition>(proxy.pathsuffix MatchesPath "/api/Auth/token") and (request.verb = "POST")</Condition>
    </Flow>
    <Flow name="GET /api/Cases/{caseNumber}">
